@model BeltExam.Models.RegisterViewModel

  <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div>
                
                </div>
                <h2>Register</h2>
                <form asp-controller="Home" asp-action="Register" method="post">
                    <div class="form-group">
                        <span asp-validation-for="Name"></span>
                        <input  class="form-control" asp-for="Name" placeholder="Name"/>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="Alias"></span>
                        <input class="form-control" asp-for="Alias" placeholder="Alias"/>
                    </div>
                    <div class="form-group">
                         @if(ViewBag.Email != null)
                        {
                            <p>@ViewBag.Email</p>
                        }
                      
                        <span asp-validation-for="Email"></span>
                        <input type="email"  class="form-control" asp-for="Email" placeholder="Email"/>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="Password"></span>
                        <input  class="form-control"  asp-for="Password" placeholder="Password"/>
                    </div>
                    <div class="form-group">
                         <span asp-validation-for="ConfirmPassword"></span>
                        <input class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password"/>
                    </div>
       
                    <button type="submit" class="btn btn-default">Register</button><br><br>
                </form>
                <a href="/login"><button type="submit" class="btn btn-default">Already Registered? Login</button></a>
            </div>
    </div>
    
