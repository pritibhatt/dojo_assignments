@model WeddingPlanner.Models.User

<div class="container">
            <div class="col-sm-6">
                
                <h2>Login</h2>
                <form asp-controller="Home" asp-action="Signin" method="post">
                    <div class="form-group">
                         @ViewBag.Email
                        <span asp-validation-for="Email"></span> 
                        <input type="email" class="form-control" asp-for="Email" placeholder="Email"/>
                    </div>
                    <div class="form-group">
                        @ViewBag.Password
                        <span asp-validation-for="Password"></span>
                        <input  type="password" class="form-control" asp-for="Password" placeholder="Password" />
                    </div>
                    <button type="submit" class="btn btn-default">Login</button>
                </form>
            </div>
        </div>
</div>