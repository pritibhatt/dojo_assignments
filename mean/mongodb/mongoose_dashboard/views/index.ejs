<html lang="en">
<head>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

</head>
<body>
      <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h2>All Mongooses </h2>
                <% if(typeof(errors) != 'undefined' ) { %>
                    <% for (var x in errors) { %>
                     <h3><%= errors[x].message %></h3>
                    <% } %>
                <% } %>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var mongoose in all_mongooses) { %>
                        <tr>
                            <td><a href="/mongooses/<%= all_mongooses[mongoose]._id %>"><%= all_mongooses[mongoose].name %></a> </td>
                            <td><a href="/mongooses/edit/<%= all_mongooses[mongoose]._id %>" class="btn btn-default">Change Name</a> <a href="/mongooses/delete/<%= all_mongooses[mongoose]._id %>" class="btn btn-default">Delete</a</td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
                <a href="/mongooses/new" class="btn btn-default">New Mongoose</a>
            </div>
        </div>
    </div>
</body>
</html>