@{
    ViewData["Title"] = "Home Page";
}
<body>
<div class="container">  
<h1>Welcome to QuotingDojo</h1>
    <div class='row'>
        <div class='col-sm-5 forms'>
            <div>
                @{
                    foreach(var error in @ViewBag.Errors)
                    {
                        if(@error.Errors.Count > 0)
                        {                         
                            <p>@error.Errors[0].ErrorMessage</p>
                        }
                    }
                 }
            </div>
            <form action="register" method="post">                
                First Name:<input type="text"  name="fName" class="form-control"/> 
                Last Name:<input type="text"  name="lName" class="form-control"/>  
                Age:<input type="text"  name="age" class="form-control"/> 
                Email Address:<input type="text"  name="email" class="form-control"/>                   
                Password:<input type="password"  name="password" class="form-control"/>       
                <div class='form-group'><br>
                <button type="submit">Submit</button>
                </div>                       
            </form>
            
            
        </div>
    </div>
</div>